{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build DangAnalyzer",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "${workspaceFolder}/DangAnalyzer.cpp",
                "${workspaceFolder}/XMLGenerator.cpp",
                "${workspaceFolder}/DangTokenizer.cpp",
                "-o",
                "${workspaceFolder}/DangAnalyzer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}